<main id='post-create' class='page__posts-create flex'>
	<el-form ref='postsForm' :model='form' label-width='120' class='posts__form'>
		<el-form-item label='Title' prop='title' required>
			<el-input v-model='form.title'></el-input>
		</el-form-item>
		<el-form-item label='Body' prop='body' required>
			<el-input
				class='post__body-input'
				v-model='form.body'
				type='textarea'
				:show-word-limit='true'
				@input='handleInputBody'
			></el-input>
		</el-form-item>

		<el-form-item>
			<el-button type='primary' style='width: 100%;'>Publish</el-button>
		</el-form-item>
	</el-form>

	<div class='posts__preview'>
		<h1 class='post__title'>\{{form.title}}</h1>
		<div class='post__info-container flex'>
			<img class='post__avatar-img' src='/public/static/avatar.png' alt='' />
			<span class='post__user-info'>
				<div class='user-info__username'>Eliseabeth May</div>
				<div class='user-info__time'>\{{time}}</div>
			</span>
			<span class='post__tag'>Accounting</span>
		</div>
		<article class='post__content' v-html='content'>
		</article>
	</div>
</main>

<script src='../../public/js/posts/create.js'></script>
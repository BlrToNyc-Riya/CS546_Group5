<el-form ref='postsForm' :model='postForm' label-width='120' class='posts__form'>
	<el-form-item label='Title' prop='title' required>
		<el-input v-model='postForm.title'></el-input>
	</el-form-item>

	<el-form-item label='Topic' prop='topics' required>
		<el-select v-model='postForm.topics' multiple collapse-tags :multiple-limit='3'>
			<el-option v-for='item in topics' :key='item' :value='item'>\{{item}}</el-option>
		</el-select>
	</el-form-item>

	<el-form-item label='Article' prop='body' required>
		<el-input
			class='post__body-input'
			v-model='postForm.body'
			type='textarea'
			:show-word-limit='true'
			@input='handleInputBody'
		></el-input>
	</el-form-item>

	<el-form-item>
		<el-button type='primary' style='width: 100%;' @click='handlePublish'>Publish</el-button>
	</el-form-item>
</el-form>
<div class="profile__friend-list flex-c">
  <h2>Friends List</h2>

  <div class="table-container">
    <el-table :data="myFriendsList" stripe style="width: 100%" :show-header="false">
      <el-table-column width="200">
        <template #default="{row}">
          <span class="flex cell__cus">
            <el-avatar :src="row.url" class="aside-h" alt="avatar"></el-avatar>
            <span class="aside-h">\{{row.name}}</span>
          </span>
        </template>
      </el-table-column>
      <el-table-column prop="email" align="right" show-overflow-tooltip />
    </el-table>
  </div>
</div>